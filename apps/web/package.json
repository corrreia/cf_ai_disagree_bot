    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "vite": "^7.2.0",
    "wrangler": "^4.45.4"
  },
  "dependencies": {
    "agents": "^0.2.21",
    "better-auth": "^1.3.34",
    "lucide-svelte": "^0.552.0",
    "mode-watcher": "^1.1.0"
  }
