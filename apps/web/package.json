    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.48.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.16",
    "bits-ui": "^2.14.2",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "svelte": "^5.43.3",
    "svelte-check": "^4.3.3",
    "tailwind-merge": "^3.3.1",
