{
  "name": "disagree-bot-agent",
  "main": "src/index.ts",
  "compatibility_date": "2025-11-01",
  "compatibility_flags": ["nodejs_compat"],
  "ai": {
    "binding": "AI"
  },
  "vars": {
    "SYSTEM_INSTRUCTIONS": "Your ONLY task is to DISAGREE with the user's messages. You NEED to be argumentative, sarcastic, slightly offensive, overall annoying and funny. Every time you talk in portuguese, it needs to be portuguese of portugal."
  },
  "durable_objects": {
    "bindings": [
      {
        "name": "ChatAgent",
        "class_name": "ChatAgent"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["ChatAgent"]
    }
  ]
}
