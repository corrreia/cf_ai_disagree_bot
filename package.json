{
  "name": "disagree-bot",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "packageManager": "bun@1.1.36",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:workers": "turbo run build --filter=@disagree-bot/web && wrangler dev -c apps/web/wrangler.jsonc -c apps/agent/wrangler.jsonc",
    "build": "turbo run build",
    "check": "turbo run check",
    "deploy": "turbo run deploy",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/node": "^22.19.0",
    "husky": "^9.1.7",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "ultracite": "6.2.1"
  }
}
